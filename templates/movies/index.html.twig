{% extends 'base.html.twig' %}

{% block title %}Movies index{% endblock %}

{% block body %}
    <h1>Index des films</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Synopsis</th>
                <th>Affiche du film</th>
                <th>Date de sortie</th>

                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.sumary }}</td>
                <td>      <img src="{{ movie.image }}" class="card-img-top" alt="image of the movie {{ movie.title }}" style="width:100px;"></td>

                <td>{{ movie.releaseYear ? movie.releaseYear|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-info" style=" margin-bottom: 10px; width: 60px" href="{{ path('movies_show', {'id': movie.id}) }}">Voir</a>
                    <a class="btn btn-info" style="width: 60px" href="{{ path('movies_edit', {'id': movie.id}) }}">Editer</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a style="text-align: center" class="btn btn-info" href="{{ path('movies_new') }}">Nouveau</a>
{% endblock %}
