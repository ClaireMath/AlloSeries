{% extends 'base.html.twig' %}

{% block title %}Director{% endblock %}

{% block body %}
    <h1>Réalisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ director.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ director.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ director.lastName }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ director.dateOfBirth ? director.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ director.bio }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('director_index') }}">Retour à la liste</a>

    <a class="btn btn-info" href="{{ path('director_edit', {'id': director.id}) }}">Modifier</a>

    {{ include('director/_delete_form.html.twig') }}
{% endblock %}
